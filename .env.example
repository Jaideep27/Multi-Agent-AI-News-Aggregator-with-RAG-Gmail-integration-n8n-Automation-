# AI News Aggregator - Environment Configuration

# ============================================================================
# API KEYS (REQUIRED)
# ============================================================================
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================================================
# EMAIL CONFIGURATION (REQUIRED)
# ============================================================================
MY_EMAIL=your.email@gmail.com
APP_PASSWORD=your_gmail_app_password_here
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# ============================================================================
# POSTGRESQL DATABASE (REQUIRED)
# ============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ai_news_aggregator
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ============================================================================
# REDIS (OPTIONAL)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ============================================================================
# CHROMADB CONFIGURATION
# ============================================================================
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=ai_news_articles

# ============================================================================
# EMBEDDING CONFIGURATION
# ============================================================================
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# ============================================================================
# GEMINI MODEL CONFIGURATION
# ============================================================================
GEMINI_MODEL_DIGEST=gemini-2.5-flash
GEMINI_MODEL_CURATOR=gemini-2.5-flash
GEMINI_MODEL_EMAIL=gemini-2.5-flash
GEMINI_TEMPERATURE_DIGEST=0.7
GEMINI_TEMPERATURE_CURATOR=0.3
GEMINI_TEMPERATURE_EMAIL=0.7

# ============================================================================
# WORKFLOW CONFIGURATION
# ============================================================================
DEFAULT_HOURS=24
DEFAULT_TOP_N=10
MAX_RETRIES=3

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
APP_NAME=AI News Aggregator
APP_VERSION=2.0.0
ENVIRONMENT=development
DEBUG=False

# ============================================================================
# API CONFIGURATION (OPTIONAL - for FastAPI)
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
